{% extends "./base-admin.njk" %}

{% block title %}
    <title>Usuários</title>
{% endblock title %}

{% block content %}
    <section class="admin-container">
        <h1>Usuários</h1>
        <a href="/admin/users/create" class="button list">Novo</a>

        <div class="list-users">

            {% for user in users %}
                <div class="user">
                    <h3>{{user.name}}</h3>
                    <span>{{user.email}}</span>
                    {% if administrator == true %}
                        <form name="admin-fn{{user.id}}" id="admin-fn{{user.id}}" action="" method="POST">
                            <div class="footer-user">
                                <a href="/admin/profile/{{user.id}}/edit">Editar</a>
                                <a href="#" onclick="document.forms['admin-fn{{user.id}}'].submit()">Remover</a>
                            </div>
                        </form>
                    {% endif %}
                </div>
            {% endfor %}

        </div>
    </section>
{% endblock content %}

{% block scripts %}{% endblock scripts %}