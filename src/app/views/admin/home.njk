{% extends "./base-admin.njk" %}

{% block title %}
    <title>Admin | Receitas</title>
{% endblock title %}

{% block content %}
    <section class="container">
        <span>Gerenciar receitas</span>

        <div class="recipes">
            {% for receita in recipes %}
                <div class="recipe">
                    <span class="image" style="background-image: url({{receita.image}});"></span>
                    <div class="details">
                        <h1>{{receita.title}}</h1>
                        <h5>por
                            {{receita.chef}}</h5>
                        <a href="/admin/recipes/{{receita.id}}">visualizar</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    <div class="pagination" data-page="{{pagination.page}}" data-total="{{pagination.total}}"></div>
{% endblock content %}

{% block scripts %}
    <script src="/scripts/pagination.js"></script>
{% endblock scripts %}