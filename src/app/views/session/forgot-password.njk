{% extends "./session-base.njk" %}

{% block title %}
    <title>Recuperar senha | Foodfy</title>
{% endblock title %}

{% block content %}
<div class="login container">
    <h1>Esqueceu a senha?</h1>

    <form class="login" action="/forgot-password" method="POST">
        <div class="item">
            <span>Email</span>
            <input type="text" name="email" value="{{public.email}}" placeholder="Digite seu email para recuperar sua senha." required>
        </div>

        <div class="forgot form-footer">
            <button class="forgot" type="submit">Recuperar</button>
        </div>
    </form>
</div>
{% endblock content %}

{% block scripts %}
{% endblock scripts %}