{% extends "base.njk" %}

{% block title %}
    <title>Receitas</title>
{% endblock title %}

{% block content %}
    <section class="cards">
        {% for receita in recipes %}
            <div class="card" id="{{receita.id}}">
                <img src="{{receita.image}}" alt="{{receita.title}}">
                <div class="title">{{receita.title}}</div>
                {% for chef in chefs %}
                    {% if chef.id == receita.chef_id %}
                        <div class="autor">por
                            {{chef.name}}</div>
                    {% endif %}
                {% endfor %}
            </div>
        {% endfor %}
    </section>

    <div class="pagination" 
        data-page="{{pagination.page}}" 
        data-total="{{pagination.total}}">
    </div>
{% endblock content %}

{% block scripts %}
    <script src="/scripts/pagination.js"></script>
{% endblock scripts %}